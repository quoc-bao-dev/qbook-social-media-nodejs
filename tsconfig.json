{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/types/express.d.ts"
    ],
    "files": [
        "src/type.d.ts"
    ]
}